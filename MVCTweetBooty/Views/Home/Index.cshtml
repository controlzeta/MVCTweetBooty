@model MVCTweetBooty.Models.HomeModels
@{
    ViewBag.Title = "Tweet Search";
}
<div class="col-lg-12">
    <div class="row">
        <div class="col-md-8 col-sm-12" style="padding-bottom:20px;">
            <div class="row">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Search</span>
                        @Html.TextBoxFor(m => m.query, new { @class = "form-control", @placeholder = "Type your query" })
                        @*<input type="text" class="form-control" placeholder="Type your Query" aria-describedby="basic-addon1">*@
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-control">
                        <option>1</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-control">
                        <option>Mixed</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <a class="btn btn-primary">Search</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12" style="padding-bottom:20px;">
            <div class="">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Hashtags</span>
                    <select type="text" class="form-control" placeholder="Type your Query" aria-describedby="basic-addon1"></select>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <table id="TweetsDT" style="width:100%" class="table-responsive table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Tweet</th>
                        <th>RT's</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                        <td>-</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <table id="HashtagsDT" style="width:100%" class="table-responsive table-bordered">
                <thead>
                    <tr>
                        <th>Hashtag</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>-</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@Html.LabelFor(m => m.Statuses)
<script>
    var Tweets;
    $(document).ready(function () {
        $('#HashtagsDT').DataTable();
        $.ajax({
            //cache: false,
            type: "POST",
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            url: "/Home/GetFooString",
            //data: {},
            success: function (data) {
                Tweets = data.results.Statuses;
                console.log(data.results);
                $('#TweetsDT').DataTable({
                    "data":     Tweets,
                    "columns": [
                            { "data": "IdStr" },
                            { "data": "Author.ScreenName" },
                            { "data": "TextAsHtml" },
                            { "data": "RetweetCount" }
                               ]
                });
            },
            error: function (xhr, ajaxOptions, thrownError) {
                console.log(xhr.error);
                alert("Ajax Failed!!!");
            }
        }); // end ajax call
    });
</script>


